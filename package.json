{
  "name": "express-nest-blueprint",
  "version": "1.0.0",
  "description": "express app in nest style monorepo",
  "private": true,
  "workspaces": [
    "packages/backend/common",
    "packages/backend/*",
    "packages/frontend/*"
  ],
  "dependencies": {
    "node-pg-migrate": "^7.9.0",
    "pg": "^8.13.1"
  },
  "scripts": {
    "build:common": "npm run build -w @config/libs",
    "build:backend": "npm run build -w @app/core-api",
    "build:frontend": "npm run build -w @app/admin",
    "build": "npm run build:common && npm run build:backend",
    "dev:backend": "npm run dev -w @app/core-api",
    "dev:frontend": "npm run start -w @app/admin",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.ts\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf dist packages/**/dist node_modules packages/**/node_modules",
    "remove:running:port": "lsof -ti:3000 | xargs kill -9",
    "migrate:up": "node-pg-migrate up --migrations-dir packages/backend/core-api/database/migrations",
    "migrate:down": "node-pg-migrate down --migrations-dir packages/backend/core-api/database/migrations",
    "migrate:create": "node-pg-migrate create --migrations-dir packages/backend/core-api/database/migrations"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
