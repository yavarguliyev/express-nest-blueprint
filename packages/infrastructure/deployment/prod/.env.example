# App Configuration
PORT=3000
NODE_ENV=production
SHUT_DOWN_TIMER=5000
SHUTDOWN_RETRIES=3
SHUTDOWN_RETRY_DELAY=1000

# Health Check Configuration
HEALTH_CHECK_SECRET=prod_health_secret_2024

# Compute & Worker Configuration
COMPUTE_AUTO_SPAWN=false
COMPUTE_MIN_WORKERS=2
COMPUTE_MAX_WORKERS=4

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_please
JWT_EXPIRES_IN=24h

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MESSAGE="Too many requests from this IP, please try again later."
RATE_LIMIT_ERROR_TITLE="Too Many Requests"
RATE_LIMIT_ERROR_MESSAGE="Too many requests from this IP, please try again later."

# Queue & BullMQ Configuration
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_ATTEMPTS=3
QUEUE_BACKOFF_TYPE=exponential
QUEUE_BACKOFF_DELAY=2000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379
REDIS_DEFAULT_CACHE_TTL=3600
REDIS_DB=0
REDIS_CONCURRENCY=5

# Database (PostgreSQL) Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=express_nest_db
DB_USERNAME=postgres
DB_PASSWORD=password
DB_CONNECTION_LIMIT=10
DATABASE_URL=postgresql://postgres:password@postgres:5432/express_nest_db

# Storage Configuration (MinIO)
STORAGE_STRATEGY=s3
STORAGE_ENDPOINT=http://minio:9000
STORAGE_PUBLIC_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET_NAME=express-nest-blueprint
STORAGE_REGION=us-east-1
STORAGE_FORCE_PATH_STYLE=true

# Zookeeper Configuration
ZOOKEEPER_CLIENT_PORT=2181
ZOOKEEPER_TICK_TIME=2000

# Kafka Configuration
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0

# Log Silencing
KAFKAJS_NO_PARTITIONER_WARNING=1
DOTENV_CONFIG_SILENT=true