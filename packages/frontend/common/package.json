{
  "name": "@app/common",
  "version": "1.0.0",
  "description": "Shared frontend library providing reusable utilities, services, components, and patterns for Angular applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "watch": "tsc -p tsconfig.build.json --watch",
    "test": "karma start",
    "test:watch": "karma start --no-single-run --auto-watch",
    "lint": "eslint \"src/**/*.ts\" --fix"
  },
  "prettier": {
    "printWidth": 150,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "keywords": ["angular", "frontend", "shared", "library", "utilities"],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@angular/common": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/router": "^20.0.0",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@angular/compiler": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.0.0",
    "fast-check": "^3.15.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
