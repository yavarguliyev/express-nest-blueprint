#!/usr/bin/env sh

echo "ğŸ” Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}âœ“${NC} $1"
}

print_error() {
    echo -e "${RED}âœ—${NC} $1"
}

print_info() {
    echo -e "${YELLOW}â„¹${NC} $1"
}

# Exit on any error
set -e

print_info "Step 1/4: Running lint checks..."
if npm run lint; then
    print_status "Lint checks passed"
else
    print_error "Lint checks failed"
    exit 1
fi

print_info "Step 2/4: Building backend..."
if npm run build:backend:main; then
    print_status "Backend build successful"
else
    print_error "Backend build failed"
    exit 1
fi

print_info "Step 3/4: Building frontend..."
if npm run build:frontend:main; then
    print_status "Frontend build successful"
else
    print_error "Frontend build failed"
    exit 1
fi

print_info "Step 4/4: All checks completed successfully!"
print_status "Ready to push! ğŸš€"