#!/usr/bin/env sh

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}‚úì${NC} $1"
}

print_error() {
    echo -e "${RED}‚úó${NC} $1"
}

print_info() {
    echo -e "${YELLOW}‚Ñπ${NC} $1"
}

# Exit on any error
set -e

print_info "Running lint checks on staged files..."
if npm run lint; then
    print_status "Lint checks passed"
    print_status "Ready to commit! ‚ú®"
else
    print_error "Lint checks failed"
    print_error "Please fix the linting errors before committing"
    exit 1
fi
